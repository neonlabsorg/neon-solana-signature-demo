{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@data": [
        "src/data"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@models": [
        "src/models"
      ],
      "@environments/*": [
        "src/environments/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@environment": [
        "src/environment"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*spec.ts",
    "jest.config.ts"
  ]
}
